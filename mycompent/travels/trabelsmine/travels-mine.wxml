<view class="cu-card case ">

  <view class="cu-item shadow">

    <image class='height' src='{{covermap}}' mode='aspectFill' />

    <view class="cu-list menu-avatar padding padding-top-sm">
      <view class="content flex-sub">
        <view class="text-black text-bold text">{{title}}</view>
        <view class="text-gray text-sm flex justify-between">
          发表于{{releaseTime}}
          <view class="text-gray text-sm">
            <text class="icon-attentionfill margin-lr-xs"></text> {{browseVolume}}
            <text class="icon-messagefill margin-lr-xs"></text> {{commentVolume}}
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

