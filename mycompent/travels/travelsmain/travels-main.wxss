.image {
  width: 100%;
  height: 120px;
}

.text {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.infomation {
  display: flex;
  width: 40%;
  flex-direction: column;
  justify-content: space-between;
}

.nicknametext {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 200rpx;
}
.img{
  width: 34rpx;
  height: 34rpx;
}